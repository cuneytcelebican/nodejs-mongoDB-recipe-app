<div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <div class="white-box registration-form">
                <div class="logo">
                    <a href="/"><img src="/img/logo.png"></a>
                </div>
                <div class="registration-form-items">
                    {{#if errors}}
                        {{#each errors}}
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                               {{msg}}
                            </div>
                        {{/each}}
                    {{/if}}
                    <form method="POST" action="/users/signin">
                        <div class="form-group">
                            <label for="usernameField">Username</label>
                            <input type="text" class="form-control" name="usernameField" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="emailField">Email address</label>
                            <input type="email" class="form-control" name="emailField" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="passwordField">Password</label>
                            <input type="password" class="form-control" name="passwordField" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <label for="verifyPasswordField">Verify Password</label>
                            <input type="password" class="form-control" name="verifyPasswordField" placeholder="Verify Password">
                        </div>
                        
                        <button type="submit" class="btn btn-success">SUBMIT</button>

                        <div class="login-callback">Do you have an account? <a href="/users/login">Login</a></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<div class="bg-hw-img"></div>
